<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <padding
                        android:top="2dp"
                        android:bottom="2dp"
                        android:left="1dp"
                        android:right="1dp"/>
                    <solid android:color="@color/CustomGrey" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/CustomGrey" />
                    <corners android:radius="5dp" />
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="4dp"
                        android:top="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>